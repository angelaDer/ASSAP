<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="429dp"
        android:layout_height="129dp"
        app:layout_constraintBottom_toTopOf="@+id/createnew"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/createnew"
        app:srcCompat="@drawable/top" />

    <TextView
        android:id="@+id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="cursive"
        android:text="Hi, Admin!"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHello"
        app:srcCompat="?android:attr/actionModeCopyDrawable" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?android:attr/actionModePasteDrawable" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/imageButton5"
        app:layout_constraintTop_toBottomOf="@+id/tvHello"
        app:srcCompat="?android:attr/actionModeSelectAllDrawable" />

    <ImageButton
        android:id="@+id/createnew"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageButton6"
        app:layout_constraintTop_toBottomOf="@+id/tvHello"
        app:srcCompat="?android:attr/actionModeCutDrawable" />



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"


        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/imageButton">

        <!-- Main Content View -->



    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="261dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ing" />

        <TextView
            android:id="@+id/twdetails1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/image"
            android:text="Line 1 - Title"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/twdetails5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="15dp"
            android:layout_below="@+id/twdetails1"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/twdetails2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 2- description"
            android:textSize="15dp"
            android:layout_below="@+id/twdetails5"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="35dp" />
        <TextView
            android:id="@+id/twdetails4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Localisation:"
            android:textSize="15dp"
            android:layout_below="@+id/twdetails2"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/twdetails3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 3- localisation"
            android:textSize="15dp"
            android:layout_below="@+id/twdetails4"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="35dp" />

        <TextView
            android:id="@+id/twdetails6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: In progress"
            android:textSize="15dp"
            android:layout_below="@+id/twdetails3"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>



    </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>